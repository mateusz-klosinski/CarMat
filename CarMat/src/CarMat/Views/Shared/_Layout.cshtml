<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarMat</title>


    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/Font-Awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body>

    <nav class="navbar navbar-default">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navigation" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <i class="fa fa-car fa-4x"></i>
                    <div>
                        <h3>CarMat</h3>
                        <span>OGŁOSZENIA</span>
                        <span>MOTORYZACYJNE</span>
                    </div>
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navigation">
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="#">Zaloguj się</a></li>
                        <li><a href="#">Rejestracja</a></li>
                    }
                    else
                    {
                        <li><a href="#"><i class="fa fa-plus-square"></i> Dodaj ogłoszenie</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-user"></i> Nazwa użytkownika
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Moje ogłoszenia</a></li>
                                <li><a href="#">Obserwowane ogłoszenia</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">Ustawienia</a></li>
                                <li><a href="#">Wyloguj się</a></li>
                            </ul>
                        </li>
                    }

                </ul>
            </div>
        </div><!-- /.navbar-collapse -->
    </nav>

    <section class="search-form">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Znajdź swój nowy samochód...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                    </span>
                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
    </section>

    <section>
        @RenderBody()
    </section>


    <footer>
        <div class="navbar navbar-default">
            <h5 class="text-center">&copy; Car-Mat - Mateusz Kłosiński 2016</h5>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/FitText.js/jquery.fittext.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
